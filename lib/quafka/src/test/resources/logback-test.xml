<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                    %white([%t]) %highlight(%-5level) %magenta(%logger) %cyan(%X) - %kvp  %yellow(%msg) %n %red(%ex)
            </pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="tc" level="OFF"/>
    <logger name="com.github.dockerjava" level="OFF"/>
    <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="OFF"/>
    <logger name="org.apache" level="OFF"/>
    <logger name="kafka" level="WARN"/>
    <logger name="io.github.embeddedkafka" level="WARN"/>
    <logger name="kafka.server" level="WARN"/>
    <logger name="com.trendyol.quafka" level="TRACE"/>
</configuration>
